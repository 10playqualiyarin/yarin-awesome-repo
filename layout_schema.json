{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/LayoutSchema",
  "definitions": {
    "LayoutSchema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["layout"]
        },
        "description": {
          "type": "string"
        },
        "table": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "categories": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": { "type": "string" },
                  "icon": { "$ref": "#/definitions/LayoutAction/properties/icon" },
                  "items": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/LayoutItem" }
                  }
                },
                "required": ["name", "items"]
              }
            },
            "items": {
              "type": "array",
              "items": { "$ref": "#/definitions/LayoutItem" }
            },
            "quick_access": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": { "type": "string" },
                  "value": { "type": "string" },
                  "index": { "type": "integer", "minimum": 0 }
                },
                "required": ["name", "value"]
              }
            }
          }
        }
      },
      "required": ["kind", "table"],
      "title": "Layout Schema"
    },
    "LayoutItem": {
      "oneOf": [
        { "$ref": "#/definitions/OutputItem" },
        { "$ref": "#/definitions/ResourceItem" },
        { "$ref": "#/definitions/EnvRefItem" },
        { "$ref": "#/definitions/CustomLayoutItem" }
      ]
    },
    "OutputItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "const": "output" },
        "name": { "type": "string" },
        "display_name": { "type": "string" },
        "icon": { "type": "string" }
      },
      "required": ["type", "name"]
    },
    "ResourceItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "const": "resource" },
        "name": { 
          "type": "string",
          "description": "The name of the referenced resource."
        },
        "display_name": { "type": "string" },
        "status": { "type": "string", "enum": ["active", "offline"] },
        "icon": { "type": "string" },
        "attributes": {
          "type": "array",
          "items": { "$ref": "#/definitions/LayoutAttribute" },
          "maxItems": 5
        },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/definitions/LayoutAction" },
          "maxItems": 3
        }
      },
      "required": ["type", "name"]
    },
    "EnvRefItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "const": "env_ref" },
        "name": { 
          "type": "string",
          "description": "The name of the referenced environment. Use '*' to include all environments or 'prefix*' to match all environments starting with 'prefix'."
        },
        "display_name": { "type": "string" },
        "icon": { "type": "string" }
      },
      "required": ["type", "name"]
    },
    "CustomLayoutItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "const": "custom" },
        "name": { "type": "string" },
        "display_name": { "type": "string" },
        "icon": { "type": "string" },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" }
            },
            "required": ["name", "value"]
          }
        },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/definitions/LayoutAction" },
          "maxItems": 3
        }
      },
      "required": ["type", "name"]
    },
    "LayoutAttribute": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "value": { "type": "string" }
          },
          "required": ["name", "value"]
        },
        {
          "type": "string"
        }
      ]
    },
    "LayoutAction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "icon": { 
          "type": "string", 
          "enum": ["connect", "restart", "powerOff", "powerOn", "power", "copy", "upload", "download", "play"]
        },
        "href": { "type": "string" },
        "label": { "type": "string" },
        "color": { "type": "string" }
      },
      "required": ["href", "icon", "label"],
      "anyOf": [
        { "required": ["icon"] },
        { "required": ["label"] }
      ]
    }
  }
}
