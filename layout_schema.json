{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/LayoutSchema",
  "definitions": {
    "LayoutSchema": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["layout"]
        },
        "description": {
          "type": "string"
        },
        "table": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "categories": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": { "type": "string" },
                  "items": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/LayoutItem" }
                  }
                },
                "required": ["name", "items"]
              }
            },
            "items": {
              "type": "array",
              "items": { "$ref": "#/definitions/LayoutItem" }
            }
          }
        }
      },
      "required": ["kind", "description", "table"],
      "title": "Layout Schema"
    },
    "LayoutItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["output", "resource"]
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["active", "offline"],
          "default": "active"
        },
        "icon": {
          "type": "string"
        },
        "attributes": {
          "type": "array",
          "items": { "$ref": "#/definitions/LayoutAttribute" },
          "maxItems": 5
        },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/definitions/LayoutAction" },
          "maxItems": 3
        }
      },
      "required": ["type", "name"],
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "output" } } },
          "then": {
            "properties": {
              "status": { "not": {} },
              "attributes": { "maxItems": 5 }
            }
          },
          "else": {
            "properties": {
              "status": { "type": "string", "enum": ["active", "offline"] }
            }
          }
        }
      ]
    },
    "LayoutAttribute": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "value": { "type": "string" }
          },
          "required": ["name", "value"]
        },
        {
          "type": "string"
        }
      ]
    },
    "LayoutAction": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "icon": { 
          "type": "string", 
          "enum": ["connect", "restart", "powerOff", "powerOn", "power", "copy", "upload", "download", "play"]
        },
        "value": { "type": "string" },
        "text": { "type": "string" },
        "tooltip": { "type": "string" }
      },
      "required": ["value"],
      "anyOf": [
        { "required": ["icon"] },
        { "required": ["text"] }
      ]
    }
  }
}
